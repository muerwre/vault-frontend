{
  "allowSyntheticDefaultImports": true,
  "compilerOptions": {
    "incremental": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es2018",
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es2015", "dom", "es6"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./custom.d.ts"],
  "exclude": ["./__tests__/**/*"]
}
